<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dojo Survey</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <form action="/result" method="POST">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="form-group">
                <label for="location">Dojo Location</label>
                <select name="location" id="location" class="custom-select">
                    @foreach (string location in ViewBag.Locations)
                    {
                        <option>@location</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="language">Favorite Language:</label>
                <select name="language" id="language" class="custom-select">
                    @foreach (string language in ViewBag.Languages)
                    {
                        <option>@language</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="comment">Comment (optional):</label>
                <textarea name="comment" id="comment" cols="50" rows="10"></textarea>
            </div>
            <button class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>
</body>
</html>